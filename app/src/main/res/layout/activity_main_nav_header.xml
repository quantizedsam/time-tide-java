<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_main_nav_header_height"
    android:background="@color/primary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_xl"
    android:paddingLeft="@dimen/padding_xl"
    android:theme="@style/AppTheme.AppBarOverlay">

    <TextView
        android:id="@+id/activity_main_nav_header_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_nav_header_title"
        android:textSize="@dimen/text_size_lg"
        android:textColor="@color/textSecondary"/>

    <TextView
        android:id="@+id/activity_main_nav_header_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_nav_header_subtitle"
        android:textSize="@dimen/text_size_sm"
        android:textColor="@color/textSecondary"/>

</LinearLayout>
