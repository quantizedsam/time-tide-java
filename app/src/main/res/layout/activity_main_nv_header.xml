<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_main_nv_header_height"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_xl"
    android:paddingLeft="@dimen/padding_xl">

    <TextView
        android:id="@+id/activity_main_nav_header_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:text="@string/activity_main_nav_header_title"
        android:textColor="?attr/color"
        android:textSize="@dimen/text_size_xl"/>

    <TextView
        android:id="@+id/activity_main_nav_header_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:text="@string/activity_main_nav_header_subtitle"
        android:textColor="?attr/color"
        android:textSize="@dimen/text_size_sm"/>

</LinearLayout>
