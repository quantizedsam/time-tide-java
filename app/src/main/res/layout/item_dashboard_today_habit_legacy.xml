<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_dashboard_today_habit_iv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_dashboard_today_habit_rl_item"
        android:src="@drawable/ic_remove_square_filled_48dp"
        android:tint="@color/primaryDark"/>

    <RelativeLayout
        android:id="@+id/item_dashboard_today_habit_rl_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_md"
        android:layout_marginEnd="@dimen/margin_md"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_dashboard_today_habit_iv_minus"
        app:layout_constraintEnd_toStartOf="@id/item_dashboard_today_habit_iv_plus">

        <ProgressBar
            android:id="@+id/item_dashboard_today_habit_pb_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/pb_dashboard_today"
            android:minHeight="@dimen/dashboard_today_habit_item_height"
            android:progressBackgroundTint="@color/primaryDark"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <LinearLayout
            android:id="@+id/item_dashboard_today_habit_ll_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_dashboard_today_habit_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_lg"
                android:paddingLeft="@dimen/padding_lg"
                android:text=""
                android:textSize="@dimen/text_size_lg"
                android:textColor="@color/background"/>

            <TextView
                android:id="@+id/item_dashboard_today_habit_tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_lg"
                android:text=""
                android:textSize="@dimen/text_size_sm"
                android:textColor="@color/background"/>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_dashboard_today_habit_iv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_dashboard_today_habit_rl_item"
        android:src="@drawable/ic_add_square_filled_48dp"
        android:tint="@color/primaryDark"/>

</android.support.constraint.ConstraintLayout>
