<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- day theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- inverted text -->
        <!-- nv header text -->
        <item name="color">@color/gray100</item>

        <!-- fab icon -->
        <!-- tab indicator -->
        <item name="colorAccent">@color/gray900</item>

        <!-- app bar background -->
        <!-- tab background -->
        <item name="colorPrimary">@color/gray700</item>

        <!-- inverted background -->
        <!-- nv header background -->
        <item name="colorPrimaryDark">@color/gray700</item>

        <!-- default unselected item icon -->
        <!-- nv unselected item icon -->
        <item name="colorSecondary">@color/gray300</item>

        <!-- default selected item icon and text -->
        <!-- default text -->
        <!-- toolbar text -->
        <!-- nv selected item icon and text -->
        <item name="android:textColor">@color/gray700</item>

        <!-- default unselected item text -->
        <!-- fab icon ripple -->
        <!-- nv unselected item text -->
        <item name="android:textColorPrimary">@color/gray500</item>

        <!-- toolbar icon and text -->
        <item name="android:textColorSecondary">@color/gray700</item>

        <!-- default background -->
        <!-- toolbar background -->
        <item name="android:textColorTertiary">@color/gray100</item>
    </style>

    <!-- activity -->
    <style name="AppTheme.Activity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- navigation view -->
    <style name="AppTheme.NavigationView">
        <!-- selected item text color -->
        <item name="colorPrimary">?android:attr/textColor</item>-->
        <!-- unselected item text color -->
        <!-- <item name="android:textColorPrimary">?android:attr/textColorTertiary</item> -->
        <!-- unselected item icon color -->
         <item name="android:textColorSecondary">?attr/colorSecondary</item>
    </style>

    <!-- tab layout -->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <!-- tab background-->
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/fragment_tab_indicator_height</item>
        <item name="tabTextColor">?android:attr/textColorPrimary</item>
        <item name="tabSelectedTextColor">?attr/color</item>
    </style>

    <!-- floating action button -->
    <style name="AppTheme.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <!-- fab icon -->
        <item name="android:src">@drawable/ic_add_circular_filled_24dp</item>
        <!-- elevation -->
        <item name="elevation">2dp</item>
    </style>

    <!-- dashboard today habit item -->
    <style name="AppTheme.ItemConstraintLayout">
        <!-- icon tint -->
        <item name="android:tint">?attr/color</item>
        <!-- check box tint -->
        <item name="android:buttonTint">?attr/color</item>
        <!-- text -->
        <item name="android:textColor">?attr/color</item>
        <!-- elevation -->
        <item name="elevation">2dp</item>
    </style>

    <!-- title text appearance -->
    <style name="AppTheme.TitleTextAppearance">
        <!-- text size -->
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

</resources>

